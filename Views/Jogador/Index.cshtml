@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<h1>Tela de Jogadores</h1>

@if (ViewBag.UserName == null)
{
    <a asp-area="" asp-controller="Login" asp-action="Index">Login</a>
}
else
{
    <form method="post" action="@Url.Action("Cadastrar")" enctype="">

        <label for="">Nome</label>
        <input type="text" name="Nome" required>

        <label for="">Email</label>
        <input type="text" name="Email" required>

        <label for="">Senha</label>
        <input type="text" name="Senha" required>

        <label for="">Equipe</label>
        <select class="form-control" name="Equipe">
            <option value="">Selecione</option>
            @foreach (var equipe in ViewBag.Equipe)
            {
                <option value="@equipe.IdEquipe">@equipe.Nome</option>
            }
        </select>

        <button type="submit">Cadastrar</button>

    </form>

    <table class="table table-striped table-responsive">

        <thead>
            <th>ID</th>
            <th>Nome</th>
            <th>Email</th>
            <th>Equipe</th>
            <th>Ações</th>
        </thead>

        <tbody>

            @foreach (Jogador jogador in ViewBag.Jogador)
            {
                <tr>
                    <td>@jogador.IdJogador</td>
                    <td>@jogador.Nome</td>
                    <td>@jogador.Email</td>
                    <td>
                        <img src="/img/Equipes/@jogador.Equipe.Imagem" alt="" width="80px" height="80px">

                    </td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Excluir"
                            asp-route-id="@jogador.IdJogador">Excluir</a>
                    </td>
                    <td>
                        <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
}